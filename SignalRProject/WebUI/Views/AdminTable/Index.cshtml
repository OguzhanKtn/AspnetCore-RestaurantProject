@model List<ResultTableDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Masa İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Table List</div>
						<a href="/AdminTable/TableListByStatus" class="btn btn-outline-success">Status</a>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform table-related operations below.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Table Name</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<th>@count</th>
										<td>@item.Name</td>
										<td><a href="/AdminTable/DeleteMenuTable/@item.Id" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/AdminTable/UpdateMenuTable/@item.Id" class="btn btn-outline-success">Update</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/AdminTable/CreateMenuTable/" class="btn btn-outline-primary">New Table</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

