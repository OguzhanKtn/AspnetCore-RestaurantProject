@model CreateBookingDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Forms</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Booking Add</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label>Person Name</label>
								<input type="text" asp-for="Name" class="form-control">
							</div>
							<div class="form-group">
								<label>Phone</label>
								<input type="text" asp-for="Phone" class="form-control">
							</div>
							<div class="form-group">
								<label>Mail</label>
								<input type="text" asp-for="Mail" class="form-control">
							</div>
							<div class="form-group">
								<label>Person Count</label>
								<input type="text" asp-for="PersonCount" class="form-control">
							</div>
							<div class="form-group">
								<label>Date</label>
								<input type="datetime" asp-for="Date" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Submit</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

