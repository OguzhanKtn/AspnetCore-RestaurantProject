@model CreateProductDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Forms</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Product Add</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productname">Product Name</label>
								<input type="text" asp-for="Name" class="form-control" id="productname">
							</div>
							<div class="form-group">
								<label class="label">Category</label>
								@Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new{@class ="form-control"})
							</div>
							<div class="form-group">
								<label for="description">Description</label>
								<input type="text" asp-for="Description" class="form-control" id="description">
							</div>
							<div class="form-group">
								<label for="price">Price</label>
								<input type="text" asp-for="Price" class="form-control" id="price">
							</div>
							<div class="form-group">
								<label for="imageurl">Image Url</label>
								<input type="text" asp-for="ImageUrl" class="form-control" id="imageurl">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Submit</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

