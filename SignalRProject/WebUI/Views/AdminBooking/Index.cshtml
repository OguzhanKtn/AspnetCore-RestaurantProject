@model List<ResultBookingDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Tables</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Reservation List</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform reservation-related operations below.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Name</th>
									<th scope="col">Phone</th>
									<th scope="col">Mail</th>
									<th scope="col">Person Count</th>
									<th scope="col">Reservation Date</th>
									<th scope="col">Delete</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									count++;
									<tr>
										<td>@count</td>
										<td>@item.Name</td>
										<td>@item.Phone</td>
										<td>@item.Mail</td>
										<td>@item.PersonCount</td>
										<td>@item.Date.ToString("dd-MMM-yyyy")</td>
										<td><a href="/AdminBooking/Delete/@item.Id" class="btn btn-outline-danger">Delete</a></td>
										<td><a href="/AdminBooking/Update/@item.Id" class="btn btn-outline-success">Update</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/AdminBooking/Create" class="btn btn-outline-primary">Add Reservation</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

