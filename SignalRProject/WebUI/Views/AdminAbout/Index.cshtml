@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Tables</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">About</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							You can perform about-related operations below.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">ImageUrl</th>
									<th scope="col">Title</th>
									<th scope="col">Description</th>
									<th scope="col">Update</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ImageUrl</td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/AdminAbout/Update/@item.Id" class="btn btn-outline-success">Update</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/AdminAbout/Create" class="btn btn-outline-primary">Add About</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>

