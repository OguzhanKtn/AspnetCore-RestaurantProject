@model UpdateContactDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Forms</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Contact Update</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<input type="hidden" asp-for="Id" />
								<label>Location</label>
								<input type="text" asp-for="Location" class="form-control">
							</div>
							<div class="form-group">
								<label>Phone</label>
								<input type="text" asp-for="Phone" class="form-control">
							</div>
							<div class="form-group">
								<label>Mail</label>
								<input type="email" asp-for="Mail" class="form-control">
							</div>
							<div class="form-group">
								<label>Footer Description</label>
								<input type="text" asp-for="FooterDescription" class="form-control">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Update</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

